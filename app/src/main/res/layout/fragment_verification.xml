<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thank_you_for_registering"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/sora_semi_bold"
        />

    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/enter_the_4_digits_verification_code_we_sent_to_your_mail"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/titleTextView"
        app:layout_constraintEnd_toEndOf="@id/titleTextView"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toTopOf="@id/titleTextView"
        android:fontFamily="@font/sora_light"
        android:gravity="center"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/verifyInputConstraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/subtitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="42dp"
        >

        <EditText
            android:id="@+id/firstNumberEditBox"
            android:layout_width="72.22dp"
            android:layout_height="72.22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/border_verify_edit_text"
            android:textColor="@color/loginpage_login_button"
            android:fontFamily="@font/sora_semi_bold"
            android:inputType="number"
            />
        <EditText
            android:id="@+id/secondNumberEditBox"
            android:layout_width="72.22dp"
            android:layout_height="72.22dp"
            app:layout_constraintStart_toEndOf="@id/firstNumberEditBox"
            android:layout_marginLeft="11.78dp"
            android:layout_marginStart="11.78dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/border_verify_edit_text"
            android:textColor="@color/loginpage_login_button"
            android:fontFamily="@font/sora_semi_bold"
            android:inputType="number"
            />
        <EditText
            android:id="@+id/thirdNumberEditBox"
            android:layout_width="72.22dp"
            android:layout_height="72.22dp"
            app:layout_constraintStart_toEndOf="@id/secondNumberEditBox"
            android:layout_marginLeft="11.78dp"
            android:layout_marginStart="11.78dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/border_verify_edit_text"
            android:textColor="@color/loginpage_login_button"
            android:fontFamily="@font/sora_semi_bold"
            android:inputType="number"
            />
        <EditText
            android:id="@+id/fourthNumberEditBox"
            android:layout_width="72.22dp"
            android:layout_height="72.22dp"
            app:layout_constraintStart_toEndOf="@id/thirdNumberEditBox"
            android:layout_marginLeft="11.78dp"
            android:layout_marginStart="11.78dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/border_verify_edit_text"
            android:textColor="@color/loginpage_login_button"
            android:fontFamily="@font/sora_semi_bold"
            android:inputType="number"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/successfulVerificationIcon"
        android:layout_width="36.25dp"
        android:layout_height="36.25dp"
        app:layout_constraintTop_toBottomOf="@id/verifyInputConstraintLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="136.65dp"
        android:background="@drawable/successful_verification"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/successfulVerificationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/successfulVerificationIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="19.88dp"
        android:text="@string/verification_successful"
        android:textColor="@color/loginpage_login_button"
        android:textSize="15sp"
        android:visibility="invisible"
        />


</androidx.constraintlayout.widget.ConstraintLayout>