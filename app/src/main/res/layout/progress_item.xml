<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="30dp"
    android:layout_marginHorizontal="16.5dp"
    >

    <ImageView
        android:id="@+id/progressIconImageVIew"
        android:layout_width="86dp"
        android:layout_height="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/progress_icon"
        />
    <TextView
        android:id="@+id/countProgressTextView"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/progressIconImageVIew"
        app:layout_constraintEnd_toEndOf="@id/progressIconImageVIew"
        app:layout_constraintTop_toTopOf="@id/progressIconImageVIew"
        app:layout_constraintHorizontal_bias="1"
        android:background="@drawable/progress_count_icon"
        />
    <TextView
        android:id="@+id/nameProgressTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/progressIconImageVIew"
        app:layout_constraintStart_toStartOf="@id/progressIconImageVIew"
        app:layout_constraintEnd_toEndOf="@id/progressIconImageVIew"
        android:fontFamily="@font/sora_medium"
        android:text="@string/badge_name"
        android:gravity="center"
        android:layout_marginTop="15dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>