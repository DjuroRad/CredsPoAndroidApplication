<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="25dp"
    android:background="@drawable/border_activity_item"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activityItemConstaraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activityNameTextVIew"
        android:fontFamily="@font/sora_medium"
        android:text="@string/dummy_date"
        />

    <TextView
        android:id="@+id/activityNameTextVIew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/sora_bold"
        android:textSize="16dp"
        android:text="@string/activity_name"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/editActivityIcon"
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintEnd_toStartOf="@id/deleteActivityIcon"
        app:layout_constraintTop_toTopOf="@id/activityItemConstaraintLayout"
        app:layout_constraintBottom_toBottomOf="@id/activityItemConstaraintLayout"
        android:background="@drawable/edit_activity_icon"
        android:layout_marginEnd="15dp"
        />
    <ImageView
        android:id="@+id/deleteActivityIcon"
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/activityItemConstaraintLayout"
        app:layout_constraintBottom_toBottomOf="@id/activityItemConstaraintLayout"
        android:background="@drawable/delete_activity_icon"
        />
</androidx.constraintlayout.widget.ConstraintLayout>